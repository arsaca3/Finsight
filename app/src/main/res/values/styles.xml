<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tarih seçici özelleştirme -->
    <style name="CustomDatePickerDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/lacivert</item>
        <item name="colorAccent">@color/lacivert</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerButtonPositive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerButtonNegative</item>
    </style>

    <style name="DatePickerButtonPositive" parent="android:Widget.Material.Button">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DatePickerButtonNegative" parent="android:Widget.Material.Button">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ToggleButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">40dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@drawable/selector_toggle_bg</item>
        <item name="strokeColor">@color/lacivert</item>
        <item name="strokeWidth">0dp</item>
    </style>
    <style name="ToggleButtonCleanStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

</resources>